[Unit]
Description=__NAME__ Server
DefaultDependencies=true

[Service]
ExecStart=gunicorn3 project.wsgi:application
Environment=GUNICORN_CMD_ARGS=-b 127.0.0.1:__PORT__ -w 4 --reload --capture-output --error-logfile /var/log/__NAME__.err --access-logfile /var/log/__NAME__.log
Environment=PYTHONPATH=__CONF__:__PDIR__/src
Environment=PYTHONUSERBASE=__PDIR__/.local
Environment=DJANGO_SETTINGS_MODULE=__SAFE___django
Restart=on-failure

[Install]
WantedBy=multi-user.target
