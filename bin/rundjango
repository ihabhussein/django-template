#!/bin/sh

: ${project_dir=$(cd "$(dirname "$0")/.."; pwd)}
: ${envpath=$project_dir/.env}
[ -f "$envpath" ] && export $(grep -v '^#' "$envpath" | xargs)


if [ "$1" = "pip" ]; then
    pip=$PYTHONUSERBASE/bin/pip3
    $pip install --user -q -r "$project_dir/requirements.txt"
    $pip install --user -q gunicorn
else
    $project_dir/bin/manage.py ${@:-runserver}
fi
